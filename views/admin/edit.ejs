<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/form.css" />
    <title>Project Form</title>
  </head>
  <body>
    <%- include("../partials/nav.ejs") %>
    <h3 class="title-center" >Project Form</h3>
    <div class="form">
      <form method="POST" action="/admin/put">
        <div>
          <label for="id" class ="id">Id : </label>
          <input type="text" id="p_id"name="id" value="<%= id %>" />
        </div>
        <br />
        <div class="title">
          Project Title :  
          <input type="text" id ="p_title"
            ;
            name="project_name"
            value="<%= project_name %>"
          />
        </div>
        <br />
        <div>
          <label for="category" class="category">Category :</label>
          <select
            name="project_category"
            id="p_category"
            default="<%= project_category %>"
          >
            <option value="mini-project">Mini Project</option>
            <option value="major-project">Major Project</option>
            <option value="out-house-project">Out House Project</option>
          </select>
        </div>
        <br />
        <div>
          <label for="year" class="year">Year :</label>
          <select name="project_year" id="p_year" value="<%= project_year %>">
            <option value="2021">2021</option>
            <option value="2020">2020</option>
            <option value="2019">2019</option>
            <option value="2018">2018</option>
            <option value="2017">2017</option>
            <option value="2016">2016</option>
          </select>
        </div>
        <br />
        <div class="text-area">
          <label for="description" class="lable-field"
            >Project Description</label
          >
          <textarea name="project_description" id="area" cols="40" rows="10"><%= project_description %></textarea>
        </div>
        <br />

        <div class="text-area">
          <label for="abstract" class="lable-field">Project Abstract</label>
          <textarea name="project_abstract" id ="area" cols="40" rows="10"><%= project_abstract %></textarea
          >
        </div>
        <br />
        <div class="text-area">
          <label for="problem-statement" class="lable-field"
            >Project Problem Statement</label
          >
          <textarea name="project_problem_statement" id ="area" cols="40" rows="10"><%= project_problem_statement %></textarea
          >
        </div>
        <br />
        <div class="text-area">
          <label for="methodology" class="lable-field"
            >Project Methodology</label
          >
          <textarea name="project_methodology" id="area"cols="40" rows="10"><%= project_methodology %></textarea
          >
        </div>
        <br />
        <div class="text-area">
          <label for="objective" class="lable-field">Project Objective</label>
          <textarea name="project_objective" id ="area" cols="40" rows="10"><%= project_methodology %></textarea
          >
        </div>
        <br />
        <div class="text-area">
          <label for="result" class="lable-field">Project Result</label>
          <textarea name="project_results" id="area"cols="40" rows="10"><%= project_results %></textarea
          >
        </div>
        <br />
        <div class="text-area">
          <label for="reference" class="lable-field">Project References</label>
          <textarea name="project_references" id="area"cols="40" rows="10"><%= project_references %></textarea
          >
        </div>
        <br />
        <div class="text-area">
          <label for="achivements" class="lable-field">Project Achivements</label>
          <textarea name="project_achivements" id="area" cols="40" rows="10"><%= project_achivements %></textarea>
        </div>
        <br />
        <div class="text-area">
          <label for="members" class="lable-field">Project Members</label>
          <textarea name="project_members" id ="area"cols="40" rows="10"><%= project_members %></textarea>
        </div>
        <br />
        <div class="text-area">
          <button class="btn-submit">Submit</button>
        </div>
      </form>
    </div>
    <%- include("../partials/footer.ejs") %>
  </body>
</html>
