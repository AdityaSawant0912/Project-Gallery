    <!-- <h4>Add Project Data</h4> -->
    <div class="form">
      <form enctype="multipart/form-data" action="/admin">
        <div>Project Title : <input type="text" ; id="project_name" /></div>
        <br />
        <div>
          Project Image :
          <input
            type="file"
            name="uploadImages"
            id="uploadImages"
            accept="image/x-png, image/gif, image/jpeg, image/jpg"
            multiple
          />
        </div>
        <br>
        <label for="category">Category</label>
        <div>
          <select name="project_category" id="category">
            <option value="mini-project">Mini Project</option>
            <option value="major-project">Major Project</option>
            <option value="out-house-project">Out House Project</option>
          </select>
        </div>
        <br />
        <label for="year">Year</label>
        <div>
          <select name="project_year" id="year">
            <option value="2021">2021</option>
            <option value="2020">2020</option>
            <option value="2019">2019</option>
            <option value="2018">2018</option>
            <option value="2017">2017</option>
            <option value="2016">2016</option>
          </select>
        </div>
        <br />
        <!-- <div>
          Project Image : <br /><input
            type="text"
            id="image-name"
            name="project_image"
          />
        </div>
        <br /> -->
        <div>
          Project Description : <br /><textarea
            id="project_description"
            cols="40"
            rows="10"
          ></textarea>
        </div>
        <br />
        <div>
          Project Abstract : <br /><textarea
            id="project_abstract"
            cols="40"
            rows="10"
          ></textarea>
        </div>
        <br />
        <div>
          Project Problem Statement : <br /><textarea
            id="project_problem_statement"
            cols="40"
            rows="10"
          ></textarea>
        </div>
        <br />
        <div>
          Project Methodology : <br /><textarea
            id="project_methodology"
            cols="40"
            rows="10"
          ></textarea>
        </div>
        <br />
        <div>
          Project Objective : <br /><textarea
            id="project_objective"
            cols="40"
            rows="10"
          ></textarea>
        </div>
        <br />
        <div>
          Project Result : <br /><textarea
            id="project_results"
            cols="40"
            rows="10"
          ></textarea>
        </div>
        <br />
        <div>
          Project References : <br /><textarea
            id="project_references"
            cols="40"
            rows="10"
          ></textarea>
        </div>
        <br />
        <div>
          Project Achivemnts : <br /><textarea
            id="project_achivements"
            cols="40"
            rows="10"
          ></textarea>
        </div>
        <br />
        <div>
          Project Members : <br /><textarea
            id="project_members"
            cols="40"
            rows="10"
          ></textarea>
        </div>
        <br />
        <br />
        <div>
          <!-- <input type="button" class="btn" value="Submit now">
            <input type="button" class="reset" value="Reset now"> -->
          <!-- <input type="reset" ; value=" reset now"> -->
          <button type="button" id="upload_btn">Submit</button>
        </div>
      </form>
    </div>
    <script src="/scripts/uploadjs.js"></script>
    <%- include("../partials/footer.ejs") %>
  </body>
